
.row
  .small-12.large-12.columns
    %ul#steps
      %li#first{:style => "font-weight:bold;"}
        Step 1
      %li#second{:style => "opacity:0.5"}
        Step 2
      %li#third{:style => "opacity:0.5"}
        Confirmed
    %h3 Step 1 - Request a date and time
    #content
      = form_for @appointment do |f|
        = render 'layouts/error_messages', :object => f.object
        .row
          .small-12.large-6.columns
            = f.label "Suggest date"
            = f.text_field :date, :id => "datepicker", :class => "required"
          .small-12.large-6.columns
            = f.label "Suggest time"
            = f.select :time, :options_for_select => ["9:00 am", "10:00 am", "11:00 am",
            "12:00 pm", "1:00 pm", "2:00 pm", " 3:00 pm", "4:00 pm", "5:00 pm"], :class => "required"
        .row
          .small-12.large-5.columns
            = f.submit "Request Appointment"